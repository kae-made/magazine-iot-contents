<Window x:Class="WpfAppADTQuery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppADTQuery"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="tbADTUrl" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="1"/>
        <Button Name="buttonGetModels" Margin="1" Content="Get Models" HorizontalAlignment="Right" Click="buttonGetModels_Click"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border Margin="1" Background="Azure">
                    <TextBlock Text="Twin Model : " VerticalAlignment="Center" HorizontalAlignment="Center" />
                </Border>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ListBox Name="lbTwinModels" Grid.RowSpan="2" Margin="1" SelectionChanged="lbTwinModels_Selected" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Id.AbsoluteUri}" VerticalAlignment="Center" ></TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <ListBox Name="lbOutgoingRelationships" Grid.Row="2" Margin="1"></ListBox>
                    <TextBlock Text="Outgoing" Margin="1" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Row="2"/>
                    <ListBox Name="lbInComingRelationships" Grid.Row="3" Margin="1"></ListBox>
                    <TextBlock Text="Incoming" Margin="1" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Row="3"/>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border Margin="1" Background="Azure">
                        <TextBlock Text="Query Twin : " VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBox Name="tbTwinQuery" Margin="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Row="1"/>
                    <Button Name="buttonExecTwinQuery" Content="Query" Margin="1" HorizontalAlignment="Right" Grid.Row="1" IsEnabled="False"/>
                    <ListBox Name="lbTwins" Margin="1" Grid.Row="2"></ListBox>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border Background="Azure">
                        <TextBlock Text="Traverse Relationship : " HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBox Name="tbTraverseQuery" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="1" Grid.Row="1"/>
                    <Button Name="buttonTraverse" Content="Traverse" Margin="1" HorizontalAlignment="Right" Grid.Row="1" IsEnabled="False"/>
                    <ListBox Name="lbLinkedTwins" Margin="1" Grid.Row="2"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
