<Window x:Class="WpfAppReceiveSignalR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppReceiveSignalR"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="tbSignalRHub" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
        <Button Name="buttonConnect" Content="Connect" Grid.Row="1" Margin="1" Click="buttonConnect_Click"/>
        <ScrollViewer Grid.Row="2" Margin="1">
            <TextBlock Name="tbMessage" Grid.Row="2" />
        </ScrollViewer>
    </Grid>
</Window>
